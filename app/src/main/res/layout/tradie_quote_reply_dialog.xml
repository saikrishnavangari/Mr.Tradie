<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Quote"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/tradie_quote_accept"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_accept"
            android:id="@+id/tradie_quote_accept_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Accept Quote (Accept Suggested Time)"
            android:layout_toEndOf="@+id/tradie_quote_accept_image"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tradie_quote_decline"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_decline"
            android:id="@+id/tradie_quote_decline_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Decline"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/tradie_quote_decline_image"
            android:paddingLeft="30dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_holo_dark"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tradie_quote_delete"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_delete_quote"
            android:id="@+id/tradie_quote_delete_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delete"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/tradie_quote_delete_image"
            android:paddingLeft="30dp"/>
    </RelativeLayout>
</LinearLayout>