<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_jobboardhdpi"
        android:layout_marginLeft="20dp"
        android:id="@+id/imageView4"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/jobboard_item_name"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toStartOf="@+id/jobboard_item_contact"
        android:paddingLeft="5dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:id="@+id/jobboard_item_contact"
        android:src="@drawable/btn_contacthdpi"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/jobboard_street_address"
        android:layout_below="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toStartOf="@id/jobboard_item_contact"
        android:paddingLeft="5dp"
        android:textSize="12sp"
        android:textColor="#ff000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/shadow"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
